---
import Card from "./Card.astro";
import Carrousel2 from "./Carrousel2.astro";
import Carrousel_4 from "./Carrousel_4.astro";
const sec4Images2 = [
    "mama_1.png",
    "mama_2.png",
    "mama_3.png",
    "mama_4.png",
];

---

<section class="mt-12" id="testimonios">
    <div class="flex flex-col">
        <div class="items-center px-6 pt-8 md:pt-24">
            <div>
                <h1 class="text-2xl md:text-5xl md:mb-12 font-semibold text-secondary text-center">
                    Lo que dicen de nosotros
                </h1>
            </div>
        </div>

        <div class="p-8 ">
            <div class="flex flex-wrap justify-center">
                <!-- {testimonials.map((testimonial) => (
          <Card
            imgSrc={testimonial.imgSrc}
            name={testimonial.name}
            testimonial={testimonial.testimonial}
          />
        ))} -->
        
                <!-- móvil: carrusel estándar -->
                <div class="w-full md:hidden">
                    <Carrousel2 id="sec3-4-mobile" images={sec4Images2} ms={4000}/>
                </div>

                <!-- pantallas grandes: carrusel para mostrar 4 items -->
                <div class="hidden md:block w-full">
                    <Carrousel_4 id="sec3-4-desktop" images={sec4Images2} ms={4000} />
                </div>
            </div>
        </div>
    </div>
</section>
