---
// Card component for testimonials
interface Props {
  imgSrc: string;
  name: string;
  testimonial: string;
}

const { imgSrc, name, testimonial } = Astro.props;
---

<div class="flex flex-col items-center max-w-sm relative">
  <!-- Profile image with circular border -->
  <div class="w-48 h-48 rounded-full border-[5px] border-sky-400 overflow-hidden z-20 relative p-1 shadow-lg hover:shadow-xl transition-shadow duration-300 bg-gradient-to-r from-blue-50 to-sky-50">
    <img src={imgSrc} alt={name} class="w-full h-full object-cover rounded-full hover:scale-105 transition-transform duration-300" />
  </div>
  
  <!-- Testimonial content positioned higher to overlap with the image -->
  <div class="relative bg-white rounded-full border-[5px] border-sky-400 text-center -mt-5 z-10 shadow-lg px-6 py-3 hover:shadow-xl transition-all duration-300">
    <p class="font-bold text-rose-700 text-xl drop-shadow-sm">{name}:</p>
    <p class="text-gray-800 text-sm">{testimonial}</p>
  </div>
</div>