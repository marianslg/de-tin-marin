---
import ImageSlider from "./ImageSlider.astro";

const images = [
    {src: "event_0.png", alt: "Eventos corporativos", title: "Eventos corporativos"},
    {src: "event_1.png", alt: "Cumpleaños", title: "Cumpleaños"},
    {src: "event_2.png", alt: "Eventos escolares", title: "Eventos escolares"},
    {src: "event_3.png", alt: "Eventos privados", title: "Eventos privados"},
    {src: "event_4.png", alt: "Centros culturales", title: "Centros culturales"},
    {src: "event_5.png", alt: "Eventos públicos", title: "Eventos públicos"},
];
---

<section class="mt-12 md:text-5xl pt-8 md:pt-24" id="propuestas">
    <div class="flex flex-col">
        <div class="items-center px-6 pt-8 md:pt-24">
            <div>
                <h1 class="text-2xl md:text-5xl md:mb-12 font-semibold text-primary text-center">
                    Nuestros eventos
                </h1>
            </div>
        </div>

        <div class="py-8 px-6">
           <ImageSlider images={images} />
        </div>
    </div>
</section>
