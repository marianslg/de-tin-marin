---
const { text = "", href = "#" } = Astro.props;
---

<a class="cycle-btn py-2 px-1 text-2xl md:text-4xl" href={href} target="_blank">
    <span class="p-2">
        {text}
    </span>
</a>

<style>
    @keyframes colorCycle {
        0% {
            background: #0066CC; /* azul */
            color: #FFFFFF;
            transform: scale(0.98);
        }
        16% {
            background: #FF6B00; /* naranja */
            color: #000000;
            transform: scale(1);
        }
        32% {
            background: #8A2BE2; /* p√∫rpura */
            color: #FFFFFF;
            transform: scale(1.02);
        }
        48% {
            background: #FF1493; /* rosa */
            color: #FFFFFF;
            transform: scale(1);
        }
        64% {
            background: #00CC00; /* verde */
            color: #000000;
            transform: scale(0.98);
        }
        80% {
            background: #FFD700; /* dorado */
            color: #000000;
            transform: scale(1);
        }
        100% {
            background: #0066CC; /* azul (volvemos al inicio) */
            color: #FFFFFF;
            transform: scale(0.98);
        }
    }

    .cycle-btn {
        padding: 20px 40px;
        border-radius: 8px;
        font-weight: 800;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            sans-serif;
        cursor: pointer;
        display: inline-block;
        animation: colorCycle 3s infinite linear; /* Reducido a 3 segundos */
        position: relative;
        white-space: nowrap;
        transition: all 0.2s;
        letter-spacing: 0.5px;
    }

    .cycle-btn:hover {
        animation-play-state: paused;
        background-color: #FF00FF; /* magenta al hacer hover */
        color: #FFFFFF;
        transform: scale(1.05);
    }
</style>