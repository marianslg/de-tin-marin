---
const { children } = Astro.props;
import { palette } from "./Navbar.astro";
---
<button
  id="crazy-btn"
  class="crazy-btn px-3 py-2 font-bold rounded md:text-2xl hover:shadow-lg active:scale-95"
  style={`background-color: ${palette.azulVivo}; color: #ffffff;`}
>
  <slot>{children}</slot>
</button>

<style>
  @keyframes pulseSize {
    0%, 100% { transform: scale(1); }
    50%      { transform: scale(1.05); }
  }
  
  .crazy-btn {
    animation: pulseSize 1.5s ease-in-out infinite;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .crazy-btn:hover {
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    filter: brightness(1.05);
  }
  
  .crazy-btn:active {
    transform: translateY(2px);
  }
  
  /* Efecto de brillo en los bordes */
  .crazy-btn::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
    border-radius: inherit;
    z-index: -1;
    animation: shine 3s infinite;
  }
  
  @keyframes shine {
    0% { opacity: 0.5; }
    50% { opacity: 1; }
    100% { opacity: 0.5; }
  }
</style>

<script type="module" client:load>
  const btn = document.getElementById('crazy-btn');
  
  // Efecto de ondas al hacer clic
  btn.addEventListener('click', function(e) {
    const rect = btn.getBoundingClientRect();
    const x = e.clientX - rect.left;
    const y = e.clientY - rect.top;
    
    const ripple = document.createElement('span');
    ripple.style.cssText = `
      position: absolute;
      background: rgba(255, 255, 255, 0.4);
      border-radius: 50%;
      pointer-events: none;
      width: 100px;
      height: 100px;
      left: ${x - 50}px;
      top: ${y - 50}px;
      transform: scale(0);
      animation: ripple 0.6s linear;
    `;
    
    this.appendChild(ripple);
    
    setTimeout(() => {
      ripple.remove();
    }, 600);
  });
  
  // Animaci√≥n para el efecto de ondas
  if (!document.querySelector('#ripple-animation')) {
    const style = document.createElement('style');
    style.id = 'ripple-animation';
    style.textContent = `
      @keyframes ripple {
        to {
          transform: scale(4);
          opacity: 0;
        }
      }
    `;
    document.head.appendChild(style);
  }
</script>