---
import Logo from "./Logo.astro";
import ScrollProgress from "./ScrollProgress.astro";
---

<header class="flex flex-col sticky top-0 z-50">
  <div class="flex justify-between items-center px-6 py-2 lg:px-24 bg-white/70 backdrop-blur-md">
    <div class="flex items-center">
      <a href="#" onclick="window.scrollTo({top:0, behavior:'smooth'}); return false;" class="cursor-pointer">
        <Logo class="" />
      </a>
    </div>
    
    <!-- Navigation menu - hidden on mobile, visible on md screens and up -->
    <nav class="hidden md:flex items-center ml-auto mr-24">
      <ul class="flex gap-6">
        <li><a href="#conocenos" class="font-medium hover:text-blue-600 transition-colors">Conocenos</a></li>
        <li><a href="#propuestas" class="font-medium hover:text-blue-600 transition-colors">Propuestas</a></li>
        <li><a href="#testimonios" class="font-medium hover:text-blue-600 transition-colors">Testimonios</a></li>
        <li><a href="#contactanos" class="font-medium hover:text-blue-600 transition-colors">Contactanos</a></li>
      </ul>
    </nav>
    
    <img
      src="image.png"
      alt="Image"
      class="w-10 md:w-14"
      style="animation: float 3s ease-in-out infinite;"
    />
  </div>
  <ScrollProgress />
</header>

<style>
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50%      { transform: translateY(-3px); }
}
</style>