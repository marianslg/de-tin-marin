---
interface Props {
  images: string[];
  speed?: number;   // segundos para llegar al final
  height?: string;
}
const { images, speed = 60, height = "600px" } = Astro.props;
---

<div class="overflow-hidden w-full" style={`height: ${height};`}>
  <div
    class="flex h-full"
    style={`animation: scroll ${speed}s linear forwards;`}
    aria-label="carrusel de imágenes"
  >
    {images.map((src, i) => (
      <div class="flex-shrink-0 h-full">
        <img
          src={src}
          alt={`Imagen ${i + 1}`}
          class="h-full object-contain block"
        />
      </div>
    ))}
    {images.map((src, i) => (
      <div class="flex-shrink-0 h-full">
        <img
          src={src}
          alt={`Imagen copia ${i + 1}`}
          class="h-full object-contain block"
        />
      </div>
    ))}
  </div>
</div>

<style>
  @keyframes scroll {
    from { transform: translateX(0); }
    to   { transform: translateX(-50%); }
  }

  /* nada más: la animación y los h-full hacen el resto */
</style>
