---
export interface Props {
  src: string;
  name: string;
  text: string;
}
const { src, name, text } = Astro.props;
---
<div class="flex flex-col items-center font-poppins">
  <!-- foto redonda con borde rosa -->
  <div class="w-56 h-56 border-8 border-pinkbordes rounded-full overflow-hidden">
    <img
      src={src}
      alt={`Foto de ${name}`}
      class="w-full h-full object-cover"
    />
  </div>

  <!-- caja de texto solapada -->
  <div
    class="relative bg-white border-4 border-pinkbordes rounded-2xl p-6 -mt-8 max-w-md text-center shadow-md"
  >
    <p class="text-2xl font-bold text-bluenombre mb-2">{name}</p>
    <p class="text-base font-normal text-gray-800">{text}</p>
  </div>
</div>
