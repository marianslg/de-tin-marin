---
import Carousel from "./Carousel.astro";
import CreazyButton from "./CrazyButton.astro";
const { slides = [], title = "", subtitle = "", buttonText = "", delay } = Astro.props;
---

<section
    class="flex flex-col md:flex-row items-center  gap-8 min-h-[70vh] py-16"
>
    <div class="md:w-1/2 space-y-6">
        <h1 class="text-2xl md:text-5xl font-bold text-[#ff6b6b]">
            {title}
        </h1>
       {subtitle && (
           <p class="text-lg md:text-xl text-gray-700">
               {subtitle}
           </p>
       )}
        <div class="flex ">
            {buttonText && (
                <CreazyButton class="mr-4">{buttonText}</CreazyButton>
            )}
        </div>
    </div>
    <div class="md:w-1/2 h-[85vh] ">
        <div class="h-full min-h-[16rem]">
            <Carousel images={slides} delay={4000} />
        </div>
    </div>
</section>
